# Environment variables pour DocIngestor
# Copier ce fichier vers .env et ajuster les valeurs

# Service Configuration
SERVICE_NAME=DocIngestor
SERVICE_PORT=8001
SERVICE_HOST=0.0.0.0
DEBUG=True

# Database Configuration
DB_HOST=localhost
DB_PORT=5433
DB_NAME=docqa_ingestor
DB_USER=docqa_user
DB_PASSWORD=docqa_password

# RabbitMQ Configuration
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=docqa_user
RABBITMQ_PASSWORD=docqa_password
RABBITMQ_QUEUE=documents.raw

# File Storage
UPLOAD_DIR=./data/documents
TEMP_DIR=./data/temp
MAX_FILE_SIZE=52428800

# OCR Configuration
OCR_ENABLED=True
# TESSERACT_CMD=C:\Program Files\Tesseract-OCR\tesseract.exe

# Tika Configuration (optional)
# TIKA_SERVER_URL=http://localhost:9998
