# =============================================================================
# DocQA-MS - Configuration Example
# Copier ce fichier vers .env et adapter les valeurs
# =============================================================================

# =============================================================================
# PostgreSQL Database
# =============================================================================
POSTGRES_USER=docqa
POSTGRES_PASSWORD=docqa_secure_password_here
POSTGRES_DB=docqa_db
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# =============================================================================
# RabbitMQ Message Broker
# =============================================================================
RABBITMQ_DEFAULT_USER=admin
RABBITMQ_DEFAULT_PASS=admin_secure_password_here
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672

# =============================================================================
# MinIO Object Storage
# =============================================================================
MINIO_ROOT_USER=admin
MINIO_ROOT_PASSWORD=admin123_secure_password_here
MINIO_HOST=minio
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_BUCKET=docqa-documents

# =============================================================================
# DocIngestor Service v2.0
# =============================================================================
DOCINGESTOR_SERVICE_NAME=doc_ingestor
DOCINGESTOR_API_PORT=8001
DOCINGESTOR_LOG_LEVEL=INFO
MAX_FILE_SIZE_MB=50
ALLOWED_EXTENSIONS=.pdf,.docx,.txt,.hl7,.xml
ENABLE_OCR=true
OCR_LANGUAGE=fra
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
PROCESSING_TIMEOUT_SECONDS=300

# =============================================================================
# DeID Service v2.0 (Désidentification)
# =============================================================================
DEID_SERVICE_NAME=deid
DEID_API_PORT=8002
DEID_LOG_LEVEL=INFO
SPACY_MODEL=fr_core_news_md
PRESIDIO_DEFAULT_LANGUAGE=fr
MIN_CONFIDENCE_SCORE=0.5
ANONYMIZATION_STRATEGY=replace
MAX_TEXT_LENGTH=100000
BATCH_SIZE=10
ENABLE_CACHE=true
CACHE_TTL_SECONDS=3600
SYNTHETIC_DATASET_PATH=data/synthetic_dataset.json

# =============================================================================
# Indexeur Sémantique Service (TODO)
# =============================================================================
INDEXEUR_SERVICE_NAME=indexeur
INDEXEUR_API_PORT=8003
INDEXEUR_LOG_LEVEL=INFO
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
FAISS_INDEX_PATH=/app/indexes
VECTOR_DIMENSION=384

# =============================================================================
# LLMQA Service (TODO)
# =============================================================================
LLMQA_SERVICE_NAME=llmqa
LLMQA_API_PORT=8004
LLMQA_LOG_LEVEL=INFO
OPENAI_API_KEY=your_openai_api_key_here
LLM_MODEL=gpt-3.5-turbo
LLM_TEMPERATURE=0.7
MAX_TOKENS=2000

# =============================================================================
# Synthèse Comparative Service (TODO)
# =============================================================================
SYNTHESE_SERVICE_NAME=synthese
SYNTHESE_API_PORT=8005
SYNTHESE_LOG_LEVEL=INFO

# =============================================================================
# AuditLogger Service (TODO)
# =============================================================================
AUDIT_SERVICE_NAME=audit
AUDIT_API_PORT=8006
AUDIT_LOG_LEVEL=INFO
RETENTION_DAYS=90

# =============================================================================
# Security & Auth (TODO)
# =============================================================================
JWT_SECRET_KEY=your_jwt_secret_key_change_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60
ENABLE_CORS=true
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# =============================================================================
# Application Settings
# =============================================================================
ENVIRONMENT=development
DEBUG=true
API_VERSION=v1
PROJECT_NAME=DocQA-MS
